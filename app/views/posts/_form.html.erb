<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluarlize(@post.errors.count, "error") %> prevented this post from saving</h2>
		<ul>
			<% @post.errors.full.messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title%>		
	</div>
	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_area :content%>		
	</div>
	<div class="form-group">
		<%= f.submit %>
	</div>

<% end %>